<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/resultRoot">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#88000000">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/result_image"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#AA000000">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/expected"
                android:layout_margin="8dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:padding="2dp"
                android:textColor="@android:color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_day1"
                android:layout_margin="8dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:padding="2dp"
                android:textColor="@android:color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_day2"
                android:layout_margin="8dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:padding="2dp"
                android:textColor="@android:color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_day3"
                android:layout_margin="8dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:padding="2dp"
                android:textColor="@android:color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_day4"
                android:layout_margin="8dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:padding="2dp"
                android:textColor="@android:color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_day5"
                android:layout_margin="8dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:padding="2dp"
                android:textColor="@android:color/white"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/expected_delay"
                android:layout_margin="8dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:text="Expected Delay"
                android:padding="2dp"
                android:textColor="@android:color/darker_gray"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_day1_delay"
                android:layout_margin="8dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:padding="2dp"
                android:textColor="@android:color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_day2_delay"
                android:layout_margin="8dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:padding="2dp"
                android:textColor="@android:color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_day3_delay"
                android:layout_margin="8dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:padding="2dp"
                android:textColor="@android:color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_day4_delay"
                android:layout_margin="8dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:padding="2dp"
                android:textColor="@android:color/white"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView_day5_delay"
                android:layout_margin="8dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:padding="2dp"
                android:textColor="@android:color/white"/>
        </LinearLayout>

    </LinearLayout>
    </LinearLayout>
</RelativeLayout>
